{
  "compilerOptions": {
    "target": "es3",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["types-for-adobe/Illustrator/2015.3"],
    "paths": {
      "*": ["./src/types.d.ts"]
    }
  },
  "include": ["src"]
}
